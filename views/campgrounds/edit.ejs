<% layout('layouts/boilerplate') %>
  <a href="/campgrounds/<%= campground._id %>">Back to Campgrounds</a>

  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" id="title" name="campground[title]" class="form-control" value="<%= campground.title %>">
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" id="location" name="campground[location]" class="form-control"
            value="<%= campground.location %>">
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image Url</label>
          <input type="text" id="image" name="campground[image]" class="form-control" value="<%= campground.image %>">
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea type="text" id="image" name="campground[description]" class="form-control"><%=campground.description
            %></textarea>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" class="form-control" placeholder="0.00" aria-label="Price" id="price"
              aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>">
          </div>
        </div>
        <button class="btn btn-info">Update Campground</button>
      </form>
      <a href="/campgrounds">Back to Campgrounds</a>
    </div>
  </div>